/* components/panel-item/panel-item.wxss */
.panel {
  margin-bottom: 30rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.05);
}

.panel-title {
  font-weight: bold;
  color: #2196F3;
  margin-bottom: 20rpx;
}

.panel-item {
  margin-bottom: 20rpx;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
}

.item-text {
  flex: 1;
  color: #333;
}

.arrow-icon {
  width: 30rpx;
  height: 30rpx;
  margin-left: 20rpx;
}

.item-detail {
  padding: 15rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
  color: #666;
}

.pos-tag {
  display: inline-block;
  padding: 2px 6px;
  background: #e1f5fe;
  border-radius: 4px;
  font-size: 12px;
  color: #039be5;
  margin-right: 8px;
}

.example-cn {
  color: #666;
  font-size: 14px;
  margin-top: 5px;
}