/* pages/index/index.wxss */
.container {
  padding: 40rpx;
  min-height: 100vh;
  background: #f8f9fa;
  display: flex;
  flex-direction: column;
}

/* 用户信息区域 */
.user-info {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.info-item {
  display: block;
  font-size: 32rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

/* 按钮组 */
.btn-group {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  border-radius: 48rpx;
  font-size: 34rpx;
  transition: all 0.3s;
  background: #fff;
  color: #2196F3;
  border: 2rpx solid #2196F3;
}

.btn[type="primary"] {
  background: #2196F3;
  color: #fff;
  border: none;
}

/* 退出按钮特殊样式 */
.logout-btn {
  color: #ff4444;
  border-color: #ff4444;
  margin-top: 60rpx;
}

/* 按钮点击效果 */
.btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}