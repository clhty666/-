/* pages/library/library.wxss */
.lib-list {
  height: 80vh;
  margin-top: 20rpx;
}

.lib-item {
  padding: 30rpx;
  margin: 20rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.lib-item.active {
  background: #e3f2fd;
  border: 1px solid #2196f3;
}

.checkmark {
  color: #2196f3;
  font-weight: bold;
}

/* 新增按钮样式 */
.library-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.browse-btn {
  font-size: 24rpx;
  color: #07c160;
  border: 1rpx solid #07c160;
  border-radius: 8rpx;
  padding: 8rpx 16rpx;
  position: relative;
  z-index: 10; /* 高于父容器 */
  pointer-events: auto; /* 确保可点击 */
}